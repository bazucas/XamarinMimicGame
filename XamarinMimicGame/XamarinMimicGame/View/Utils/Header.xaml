<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMimicGame.View.Utils.Header">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Style="{StaticResource Header}">
            <Label Text="Mimic Game" Style="{StaticResource HeaderTitle}" />
            <Label Text="Leave" HorizontalOptions="EndAndExpand">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LeaveEvent" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentView.Content>
</ContentView>